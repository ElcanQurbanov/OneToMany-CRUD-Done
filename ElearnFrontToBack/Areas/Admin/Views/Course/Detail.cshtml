@model Course

@{
    ViewData["Title"] = "Detail";
}


<div class="container my-5">
    <h1>Course detail</h1>

    <div class="my-3">
        <h4 class="my-3">Name</h4>
        <input type="text" class="form-control" id="customFile" asp-for="Name" disabled="disabled" />

        <h4 class="my-3">Description</h4>
        <input type="text" class="form-control" id="customFile" asp-for="Description" disabled="disabled"  />

        <h4 class="my-3">Price</h4>
        <input type="text" class="form-control" id="customFile" asp-for="Price" disabled="disabled" />

        <h4 class="my-3">Sales</h4>
        <input type="text" class="form-control" id="customFile" asp-for="Sales" disabled="disabled" />

        <h4 class="my-3">Author</h4>
        <input type="text" class="form-control" id="customFile" asp-for="Author.Name" disabled="disabled" />

        <h4 class="my-3">Image</h4>

        @foreach (var item in Model.CourseImages)
        {
            <div class="course-content my-3">
                <img style="width:400px; height:200px;" src="~/images/@item.Image" />
            </div>
        }

        <a class="btn btn-info mt-3" asp-action="Index">
            Back
        </a>

    </div>


</div>

